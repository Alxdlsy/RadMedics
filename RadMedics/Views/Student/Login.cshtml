@{
    ViewData["Title"] = "Student Login";
}

<style>
    .login-container {
        display: flex;
        min-height: 100vh;
    }
    .login-left {
        flex: 2;
        background: url('/Radbg.jpg') center center/cover no-repeat;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .login-right {
        flex: 1;
        background: #f5f5f5;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 40px 20px;
        min-width: 320px;
        box-shadow: -2px 0 8px rgba(0,0,0,0.03);
    }
    .rad-logo {
        width: 90px;
        height: 90px;
        margin-bottom: 18px;
        border-radius: 50%;
        object-fit: contain;
        background: #fff;
        box-shadow: 0 2px 8px rgba(0,0,0,0.07);
    }
    .login-title {
        font-size: 1.3rem;
        font-weight: 600;
        margin-bottom: 6px;
        text-align: center;
    }
    .login-desc {
        font-size: 1rem;
        color: #333;
        margin-bottom: 24px;
        text-align: center;
    }
    .login-form {
        width: 100%;
        max-width: 320px;
        display: flex;
        flex-direction: column;
        gap: 12px;
        margin-bottom: 18px;
    }
    .login-form input {
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
        font-size: 1rem;
    }
    .login-btn {
        background: #5FB0FA;
        color: #fff;
        border: none;
        border-radius: 4px;
        padding: 10px 0;
        font-size: 1.1rem;
        font-weight: 500;
        cursor: pointer;
        transition: background 0.2s;
    }
    .login-btn:hover {
        background: #3498db;
    }
    .terms {
        font-size: 0.85rem;
        color: #444;
        margin-top: 18px;
        text-align: center;
    }
    .terms a {
        color: #5FB0FA;
        text-decoration: underline;
    }
    @@media (max-width: 900px) {
        .login-container { flex-direction: column; }
        .login-left, .login-right { flex: unset; min-width: unset; min-height: 250px; }
        .login-left { min-height: 200px; }
    }
</style>

<div class="login-container">
    <div class="login-left">
        <!-- Background image only -->
    </div>
    <div class="login-right">
        <img src="~/Radlogo.png" alt="RadMedics Logo" class="rad-logo" />
        <div class="login-title">Welcome to RadMedics</div>
        <div class="login-desc">Sign in as Student.</div>
        <form class="login-form" method="post" action="/Student/Login">
            <input type="email" name="email" placeholder="Email" required />
            <input type="password" name="password" placeholder="Password" required />
            <button type="submit" class="login-btn">Sign in</button>
        </form>
        <div class="terms">
            By using this service, you understand and agree to the RadMedics Online Services
            <a href="#">Terms of Use</a> and <a href="#">Privacy Statement</a>
        </div>
    </div>
</div> 